{
  "name": "@saninn/capacitor-plugin-headset-detection",
  "version": "0.1.0",
  "description": "Detect if one (or more) headsets are connected to your device",
  "main": "dist/plugin.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "scripts": {
    "lint": "npm run prettier -- --check && npm run swiftlint -- lint",
    "prettier": "prettier --plugin=prettier-plugin-java \"**/*.{css,html,ts,js,java,kotlin}\"",
    "swiftlint": "node-swiftlint",
    "build": "npm run clean && tsc && rollup -c rollup.config.mjs",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build"
  },
  "author": "Saninn Salas Diaz (www.saninnsalas.com)",
  "license": "MIT",
  "devDependencies": {
    "@capacitor/android": "^7.0.0",
    "@capacitor/core": "^7.0.0",
    "@capacitor/ios": "^7.0.0",
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@ionic/prettier-config": "^4.0.0",
    "@ionic/swiftlint-config": "^2.0.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "prettier": "^3.4.2",
    "prettier-plugin-java": "^2.6.6",
    "prettier-plugin-kotlin": "^2.1.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.30.1",
    "swiftlint": "^2.0.0",
    "typescript": "~5.0.2"
  },
  "peerDependencies": {
    "@capacitor/core": ">=7.0.0"
  },
  "files": [
    "dist/",
    "ios/",
    "android/",
    "SaninnCapacitorPluginHeadsetDetection.podspec"
  ],
  "keywords": [
    "capacitor",
    "plugin",
    "native"
  ],
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "prettier": "@ionic/prettier-config",
  "swiftlint": "@ionic/swiftlint-config",
  "repository": {
    "type": "git",
    "url": "https://github.com/distante/capacitor-plugin-headset-detection"
  },
  "bugs": {
    "url": "https://github.com/distante/capacitor-plugin-headset-detection/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{md,css,html,ts,js,java,kotlin,json}": "prettier --write"
  }
}
